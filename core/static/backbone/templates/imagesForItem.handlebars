<div style="clear: left">
    <h3>Images</h3>
    {{#each images}}
        <div class="wrapper galleryThumb" style="height: 200px">
            <a class="push" href="/image/{{this.image_id}}"><img alt="{{this.attribution}}" src="{{this.thumbnail}}" class="thumb{{this.rating}}" /></a>
            <br />
            {{this.caption}}
            {{#if ../is_owner}}
                <a href="/image/{{this.id}}/detach/"><img src="http://lib.jnsq.us/iconset/12x12/remove.png" class="icon" alt="Detach" /></a>
            {{/if}}
        </div>
    {{/each}}
</div>
